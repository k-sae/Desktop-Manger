<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Desktop_Manger">
    <Style TargetType="StackPanel" x:Key="PropertyValue_Stp">
        <Setter Property="Margin" Value="0,20,0,0"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="ProperyName_TBlock">
        <Setter Property="Margin" Value="0,20,0,0"/>
    </Style>
    <Style TargetType="TextBox" x:Key="ProperyValue_TBox">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Margin" Value="20,0,10,0"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="AppliedColor_TBlock">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>